    <!-- Menu item with actions-->
    <menuitem name="DID Numeros"
	   id="utm_did_numbers.menu"
	   parent="utm.marketing_utm"
	   action="utm_did_numbers.action_window"
	   sequence="11"/>
  </data>
</odoo>
