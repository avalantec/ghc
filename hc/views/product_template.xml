<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

  <!-- Hide Cost for everybody -->    
  <record id="view_product_template_form_inherit_any" model="ir.ui.view">
            <field name="name">view.product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <!-- <field name="groups_id" eval="[(4, ref('stock.group_stock_manager'))]"/> -->
            <field name="arch" type="xml">

              <xpath expr="//page[@name='general_information']" position="attributes">
                <attribute name="invisible">1</attribute>
              </xpath>
             </field>
    </record>
    
<!-- Hide Cost for everybody -->    
  <record id="view_product_template_form_inherit_managers" model="ir.ui.view">
            <field name="name">view.product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="groups_id" eval="[(4, ref('stock.group_stock_manager'))]"/>
            <field name="arch" type="xml">

              <xpath expr="//page[@name='general_information']" position="attributes">
                <attribute name="invisible">0</attribute>
              </xpath>
             </field>
    </record>

  </data>
</odoo>
